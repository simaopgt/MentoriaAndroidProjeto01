<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
        <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="5dp"
                android:layout_height="50dp" app:srcCompat="@drawable/world" android:id="@+id/imageView4"
                android:layout_weight="0"/>
        <TextView
                android:text="City Guide"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="0"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="80dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView5"
                android:layout_weight="0"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView6"
                android:layout_weight="0"/>
    </LinearLayout>

    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:useDefaultMargins="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView10"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView11"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView12"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView13"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView14"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView15"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView16"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView17"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView18"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="0" android:id="@+id/imageView20"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="1" android:id="@+id/imageView21"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="2" android:id="@+id/imageView22"/>

    </android.support.v7.widget.GridLayout>
</LinearLayout>