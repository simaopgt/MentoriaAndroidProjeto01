<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

        <ImageView
                android:layout_width="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_height="50dp" app:srcCompat="@drawable/world" android:id="@+id/worldImage"/>
        <TextView
                android:text="City Guide"
                android:layout_toEndOf="@+id/worldImage"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginStart="80dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView8"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_toEndOf="@+id/imageView8"
                android:layout_marginStart="5dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView9"
                tools:ignore="UnknownId"/>
    </RelativeLayout>

</RelativeLayout>