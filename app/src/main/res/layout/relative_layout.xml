<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/topContainer"
            android:layout_height="70dp">

        <ImageView
                android:layout_width="50dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_height="50dp" app:srcCompat="@drawable/world" android:id="@+id/worldImage"/>
        <TextView
                android:text="City Guide"
                android:layout_toEndOf="@+id/worldImage"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_toEndOf="@+id/textView3"
                android:layout_marginStart="80dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView8"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_toEndOf="@+id/imageView8"
                android:layout_marginStart="5dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter" android:id="@+id/imageView9"
                tools:ignore="UnknownId"/>
    </RelativeLayout>
    <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/topContainer"
            app:useDefaultMargins="true">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView10"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView11"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView12"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView13"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView14"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView15"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView16"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView17"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView18"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="0" android:id="@+id/imageView20"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="1" android:id="@+id/imageView21"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="2" android:id="@+id/imageView22"/>


    </android.support.v7.widget.GridLayout>

</RelativeLayout>