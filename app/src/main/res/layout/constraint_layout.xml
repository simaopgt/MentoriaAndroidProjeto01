<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/constraintLayout"
    >

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/world"
                android:id="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView" android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp" android:layout_marginStart="10dp"/>
        <TextView
                android:text="City Guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:id="@+id/textView"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="50dp"
                android:layout_marginStart="20dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter"
                android:id="@+id/imageView2" android:layout_marginStart="50dp"
                app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                android:layout_marginEnd="6dp" android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/twitter"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView2" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.GridLayout
            android:layout_width="395dp"
            android:layout_height="645dp" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="0dp"
            app:useDefaultMargins="true">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="0" android:id="@+id/imageView10"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="1" android:id="@+id/imageView11"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="0"
                app:layout_column="2" android:id="@+id/imageView12"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="0" android:id="@+id/imageView13"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="1" android:id="@+id/imageView14"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="1"
                app:layout_column="2" android:id="@+id/imageView15"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="0" android:id="@+id/imageView16"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="1" android:id="@+id/imageView17"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="2"
                app:layout_column="2" android:id="@+id/imageView18"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="0" android:id="@+id/imageView20"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="1" android:id="@+id/imageView21"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" app:layout_row="3"
                app:layout_column="2" android:id="@+id/imageView22"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>